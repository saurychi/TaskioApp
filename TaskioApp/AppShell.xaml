<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskioApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskioApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="TaskioApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="Views.MainPage" />

    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate local:WelcomePage}"
        Route="Views.WelcomePage" />
    
    <ShellContent
        Title="SignUp"
        ContentTemplate="{DataTemplate local:SignupPage}"
        Route="Views.SignupPage"/>

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="Views.LoginPage"/>

    <ShellContent
        Title="AddTask"
        ContentTemplate="{DataTemplate local:AddTaskPage}"
        Route="Views.AddTaskPage" />

    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="Views.ProfilePage" />

    <ShellContent
        Title="ChangeProfile"
        ContentTemplate="{DataTemplate local:ChangeProfilePage}"
        Route="Views.ChangeProfilePage" />

    <ShellContent
        Title="TaskItem"
        ContentTemplate="{DataTemplate local:TaskItemPage}"
        Route="Views.TaskItemPage" />



</Shell>
