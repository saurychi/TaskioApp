 x:Class="TaskioApp.WelcomePage"<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskioApp.WelcomePage">
    <Grid>
        <!-- Background Image -->
        <Image Source="put the emu" Aspect="AspectFill"/>

        <!-- Content Overlay -->
        <StackLayout VerticalOptions="Center" Padding="30" Spacing="20">
            <!-- Title -->
            <Label Text="TASKIO"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#B069AB"/>

            <!-- Description -->
            <Label Text="Welcome to our to-do list! With its minimalist yet adorable design, 
                         it provides just the right amount of visual charm to keep you motivated and on track— 
                         because getting things done should feel as delightful as it is productive!"
                   FontSize="16"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>

            <!-- Start Button -->
            <Button Text="Start Now!" 
                    BackgroundColor="#F3D265" 
                TextColor="Black"
                    FontSize="18"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnStartClicked"/>
        </StackLayout>
    </Grid>
</ContentPage> 
