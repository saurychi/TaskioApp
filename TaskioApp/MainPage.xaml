<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskioApp.MainPage"
             BackgroundImageSource="welcome_page_bg.jpg">

    <Grid>
        <!--
        <Image Source="background.jpg" Aspect="AspectFill"/>
    -->

        <StackLayout VerticalOptions="Center" Padding="30" Spacing="20">
            <Label Text="TASKIO"
               FontSize="36"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#B069AB"/>

            <Label FontSize="16"
               TextColor="Black"
               HorizontalTextAlignment="Center"
               Text="Welcome to our to-do list! With its minimalist yet adorable design,  
                      it provides just the right amount of visual charm to keep you motivated and on track-
                      because getting things done should feel as delightful as it is productive!"/>


            <Button Text="Start Now!" 
                BackgroundColor="#F3D265"
                TextColor="Black"
                FontSize="18"
                CornerRadius="25"
                HeightRequest="50"
                Clicked="OnStartClicked"/>
        </StackLayout>

    </Grid>

</ContentPage>
